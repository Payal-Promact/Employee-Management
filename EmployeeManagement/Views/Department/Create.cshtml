@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EmployeeManagement.Models.Department

@{
    ViewBag.Title = "Create";
}

<h2>Create Department</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Departemnt</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DeptID, new { @class = "col-md-4" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DeptID)
                @Html.ValidationMessageFor(Model => Model.DeptID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DeptName, new { @class = "col-md-4"})
            <div class="col-md-8">
                @Html.EditorFor(model => model.DeptName)
                @Html.ValidationMessageFor(model => model.DeptName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Create" class="btn-default" /> 
            </div>

        </div>

    </div>
}


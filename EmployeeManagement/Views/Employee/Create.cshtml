@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EmployeeManagement.Models.Employee

@{
    ViewBag.Title = "Create";
}

<h2>Create Employee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
         <h4>Employee</h4>
         <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
        @Html.LabelFor(model => model.EmpID, new { @class = "col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.EmpID)
            @Html.ValidationMessageFor(model => model.EmpID)
        </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmpName, new { @class = "col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.EmpName)
                @Html.ValidationMessageFor(model => model.EmpName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmpDOJ, new { @class = "col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.EmpDOJ)
                @Html.ValidationMessageFor(model => model.EmpDOJ)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmpContactNo, new { @class = "col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.EmpContactNo)
                @Html.ValidationMessageFor(model => model.EmpContactNo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmpSalary, new { @class = "col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.EmpSalary)
                @Html.ValidationMessageFor(model => model.EmpSalary)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeptID, new { @class = "col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DeptID)
                @Html.ValidationMessageFor(model => model.DeptID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Create" class="btn-default" />
            </div>
        </div>
    </div>
}


